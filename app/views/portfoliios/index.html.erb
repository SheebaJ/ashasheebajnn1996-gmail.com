<h1>Portfolio Items</h1>
<table>
<tr>
<th>Title</th>
<th>Sub-Title</th>
<th>Body</th>
<%# <th>Main-Image</th> %>
<th>Thumb-Image</th>
</tr>
<% @portfolio_items.each do |p| %>
<tr>
<td><%= p.title %></td>
<td><%= p.subtitle %></td>
<td><%= p.body %></td>
<%# <td><%= p.main_image</td>  %>
<td><%= image_tag p.thumb_image unless p.thumb_image.nil? %></td>
</tr>
<% end %>